<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icon with proper alignment -->
        <TextView
            android:id="@+id/textViewIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="ðŸ’§"
            android:textSize="24sp"
            android:background="@drawable/icon_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Habit Name -->
        <TextView
            android:id="@+id/textViewHabitName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/buttonMenu"
            app:layout_constraintStart_toEndOf="@id/textViewIcon"
            app:layout_constraintTop_toTopOf="@id/textViewIcon"
            tools:text="Mindfulness" />

        <!-- Habit Description -->
        <TextView
            android:id="@+id/textViewHabitDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@id/textViewHabitName"
            app:layout_constraintStart_toStartOf="@id/textViewHabitName"
            app:layout_constraintTop_toBottomOf="@id/textViewHabitName"
            tools:text="Daily meditation" />

        <!-- Menu Button (3 dots) -->
        <ImageButton
            android:id="@+id/buttonMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:src="@drawable/ic_more_vert"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@id/checkBoxHabit"
            app:layout_constraintTop_toTopOf="@id/textViewIcon"
            app:layout_constraintBottom_toBottomOf="@id/textViewIcon" />

        <!-- Checkbox aligned properly -->
        <CheckBox
            android:id="@+id/checkBoxHabit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textViewIcon"
            app:layout_constraintBottom_toBottomOf="@id/textViewIcon" />

        <!-- Category Tag -->
        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/category_tag"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:textColor="@color/primary"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/textViewHabitName"
            app:layout_constraintTop_toBottomOf="@id/textViewHabitDescription"
            tools:text="Mindfulness" />

        <!-- Difficulty Tag -->
        <TextView
            android:id="@+id/textViewDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/difficulty_tag"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/textViewCategory"
            app:layout_constraintTop_toTopOf="@id/textViewCategory"
            tools:text="Medium" />

        <!-- Hidden layout for compatibility -->
        <LinearLayout
            android:id="@+id/layoutTags"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Streak -->
        <TextView
            android:id="@+id/textViewStreak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/accent"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/textViewHabitName"
            app:layout_constraintStart_toStartOf="@id/textViewHabitName"
            app:layout_constraintTop_toBottomOf="@id/layoutTags"
            tools:text="ðŸ”¥ 5 day streak"
            tools:visibility="visible" />

        <!-- Hidden Edit Button for compatibility -->
        <ImageButton
            android:id="@+id/buttonEdit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:contentDescription="@string/edit"
            android:src="@drawable/ic_edit" />

        <!-- Hidden Delete Button for compatibility -->
        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:contentDescription="@string/delete"
            android:src="@drawable/ic_delete" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
