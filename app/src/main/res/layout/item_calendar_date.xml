<?xml version="1.0" encoding="utf-8"?>
<!-- Professional Modern Calendar Item -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="56dp"
        android:layout_height="72dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        app:strokeWidth="1dp"
        app:strokeColor="#F0F0F0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.08"
                android:textColor="@color/text_hint"
                android:textSize="9sp"
                android:textAllCaps="true"
                tools:text="MON" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="15" />

            <!-- Minimal Completion Dot -->
            <View
                android:id="@+id/layoutCompletionIndicator"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_icon_circle"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Selection/Today Overlay -->
    <View
        android:id="@+id/viewSelectionOverlay"
        android:layout_width="56dp"
        android:layout_height="72dp"
        android:background="@drawable/bg_calendar_modern"
        android:visibility="gone" />

</FrameLayout>
