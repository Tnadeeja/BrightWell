<?xml version="1.0" encoding="utf-8"?>
<!-- Widget with Animated Gradient Border -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Border -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#00FF88"
                android:centerColor="#06B6D4"
                android:startColor="#38BDF8"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- White Background -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="21dp" />
        </shape>
    </item>
</layer-list>
