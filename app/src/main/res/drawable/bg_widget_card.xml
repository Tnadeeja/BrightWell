<?xml version="1.0" encoding="utf-8"?>
<!-- Modern Widget Card with Gradient Border -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Border -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="@color/gradient_blue_end"
                android:startColor="@color/gradient_green_start"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- White Background -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="18dp" />
        </shape>
    </item>
</layer-list>
